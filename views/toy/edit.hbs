<div class="container">
   <h1>Edit Product</h1>
   <form action="/toy/edit/{{toy._id}}" method="post">
      <div class="mb-3">
         <label for="name" class="form-label">Toy Name</label>
         <input type="text" class="form-control" id="name" name="name" placeholder="Enter toy name" required minlength="3" maxlength="30"
         value="{{toy.name}}">
      </div>
      <div class="mb-3">
         <label for="description" class="form-label">Toy Description</label>
         <textarea class="form-control" id="description" name="description" rows="3"
            placeholder="Enter toy description" value="{{toy.description}}"></textarea>
      </div>
      <div class="mb-3">
         <label for="price" class="form-label">Price</label>
         <input type="number" class="form-control" id="price" name="price" placeholder="Enter toy price" required value="{{toy.price}}">
      </div>
      <div class="mt-3">
         <label for="image">Image</label>
         <input class="form-control" type="url" name="image" required value="{{toy.image}}">
      </div>
      <button type="submit" class="btn btn-primary">Update Product</button>
   </form>
</div>